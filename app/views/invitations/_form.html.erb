<%= simple_form_for @invitation, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :user, label_method: :email_with_phone %>
  <%= f.association :recipient, label_method: :email_with_phone %>
  <%= f.association :account, collection: (@invitation.new_record? ? current_user.accounts : current_user.all.accounts), label_method: :id %>
  <%= f.input :recipient_email %>
  <%= f.input :recipient_phone %>
  <%= f.input :state, collection: Invitation::STATES %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                invitations_path, :class => 'btn' %>
  </div>
<% end %>
