<%= simple_form_for @transaction, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :user, label_method: :email_with_phone %>
  <%= f.association :account, label_method: :id %>
  <%= f.input :value %>
  <%= f.input :date %>
  <%= f.input :description %>
  <%= f.input :tag_names %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                transactions_path, :class => 'btn' %>
  </div>
<% end %>
