<%- model_class = @transaction.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<p>
  <strong><%= model_class.human_attribute_name(:user_id) %>:</strong><br>
  <%= @transaction.user_id %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:account_id) %>:</strong><br>
  <%= @transaction.account_id %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:value) %>:</strong><br>
  <%= money @transaction.value, @transaction.account.currency %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:date) %>:</strong><br>
  <%= l @transaction.date, format: :long %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:description) %>:</strong><br>
  <%= @transaction.description %>
</p>
<% if @transaction.attachment.present? %>
  <p>
    <strong><%= model_class.human_attribute_name(:attachment) %>:</strong><br>
    <%= link_to @transaction.attachment.url, @transaction.attachment.url %>
  </p>
<% end %>
<p>
  <strong><%= model_class.human_attribute_name(:tag_names) %>:</strong><br>
  <%= @transaction.tag_names %>
</p>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              transactions_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_transaction_path(@transaction), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              transaction_path(@transaction),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
