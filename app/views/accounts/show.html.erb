<%- model_class = @account.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<p>
  <strong><%= model_class.human_attribute_name(:user_id) %>:</strong><br>
  <%= @account.user_id %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:public) %>:</strong><br>
  <%= @account.public %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:currency) %>:</strong><br>
  <%= @account.currency %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:balance) %>:</strong><br>
  <%= money @account.balance, @account.currency %>
</p>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              accounts_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_account_path(@account), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              account_path(@account),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
